@{
    ViewData["Title"] = "Dashboard";
}

<div class="dashboard-container py-5">
    <!-- Welcome Card -->
    <div class="welcome-card mb-5">
        <div class="card bg-gradient-primary shadow-lg p-4 mb-4">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h2 class="text-white mb-1 fw-bold">Welcome, @Model.Username</h2>
                    <p class="text-white-50">Account Dashboard</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <span class="badge bg-white text-primary mb-2">Current Balance</span>
                    <h3 class="text-white mb-0">₹@Model.Balance.ToString("N0")</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Cards -->
    <div class="row g-4 mb-5">
        <!-- Deposit Card -->
        <div class="col-md-6 col-lg-3">
            <a href="/Account/Deposit" class="text-decoration-none">
                <div class="action-card shadow-sm h-100 p-4 text-center">
                    <div class="icon-wrapper mb-3">
                        <i class="bi bi-wallet2 fs-1"></i>
                    </div>
                    <h4 class="fw-bold">Deposit</h4>
                    <p class="text-muted mb-0">Add funds to your account</p>
                </div>
            </a>
        </div>

        <!-- Withdraw Card -->
        <div class="col-md-6 col-lg-3">
            <a href="/Account/Withdraw" class="text-decoration-none">
                <div class="action-card shadow-sm h-100 p-4 text-center">
                    <div class="icon-wrapper mb-3">
                        <i class="bi bi-cash-stack fs-1"></i>
                    </div>
                    <h4 class="fw-bold">Withdraw</h4>
                    <p class="text-muted mb-0">Withdraw funds from your account</p>
                </div>
            </a>
        </div>
    </div>

    <!-- Transaction History Section -->
    <div class="transaction-section">
        <div class="card shadow-lg">
            <div class="card-header d-flex align-items-center">
                <i class="bi bi-clock-history me-2 text-primary"></i>
                <h5 class="mb-0 fw-bold">Transaction History</h5>
            </div>
            <div class="card-body p-0">
                @if (Model.TransactionHistory != null && Model.TransactionHistory.Count > 0)
                {
                    <ul class="transaction-list">
                        @foreach (var transaction in Model.TransactionHistory)
                        {
                            <li class="transaction-item">
                                <div class="d-flex align-items-center">
                                    @if (transaction.Contains("Deposit"))
                                    {
                                        <span class="transaction-icon deposit"><i class="bi bi-arrow-down-circle"></i></span>
                                    }
                                    else if (transaction.Contains("Withdraw"))
                                    {
                                        <span class="transaction-icon withdraw"><i class="bi bi-arrow-up-circle"></i></span>
                                    }
                                    else
                                    {
                                        <span class="transaction-icon"><i class="bi bi-info-circle"></i></span>
                                    }
                                    <span>@transaction</span>
                                </div>
                                <span class="transaction-date text-muted small">@DateTime.Now.ToString("MMM dd, yyyy")</span>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <div class="empty-state p-5 text-center">
                        <i class="bi bi-clock-history fs-1 text-muted mb-3"></i>
                        <p class="text-muted mb-0">No transactions available yet.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    /* Main Container */
    .dashboard-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    /* Card Styles */
    .card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
    }

    /* Welcome Card */
    .bg-gradient-primary {
        background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
    }

    /* Action Cards */
    .action-card {
        border-radius: 15px;
        transition: all 0.3s ease;
        background-color: white;
        border: 1px solid rgba(0,0,0,0.05);
    }

        .action-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.1) !important;
        }

    .icon-wrapper {
        height: 70px;
        width: 70px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: rgba(78, 115, 223, 0.1);
        border-radius: 50%;
        margin: 0 auto;
        color: #4e73df;
    }

    /* Transaction List */
    .transaction-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .transaction-item {
        padding: 15px 20px;
        border-bottom: 1px solid rgba(0,0,0,0.05);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .transaction-item:last-child {
            border-bottom: none;
        }

    .transaction-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 32px;
        height: 32px;
        border-radius: 50%;
        margin-right: 12px;
        background-color: #e9ecef;
        color: #495057;
    }

        .transaction-icon.deposit {
            background-color: rgba(40, 167, 69, 0.1);
            color: #28a745;
        }

        .transaction-icon.withdraw {
            background-color: rgba(220, 53, 69, 0.1);
            color: #dc3545;
        }

    /* Card Headers */
    .card-header {
        background-color: white;
        border-bottom: 1px solid rgba(0,0,0,0.05);
        padding: 1rem 1.5rem;
    }

