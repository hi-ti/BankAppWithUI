@{
    ViewData["Title"] = "Dashboard";
}

@* @import url("https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css"); *@

<div class="container py-5">
    <div class="card shadow-sm p-4 mb-4">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2 class="mb-1">Welcome, @Model.Username</h2>
                <p class="text-muted">Account Dashboard</p>
            </div>
            <div class="col-md-6 text-md-end">
                <h3 class="mb-1">Balance</h3>
                <h4 class="text-primary mb-0">₹@Model.Balance</h4>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Deposit Card -->
        <div class="col-md-6 col-lg-3">
            <a href="/Account/Deposit" class="text-decoration-none">
                <div class="card shadow-sm h-100 p-4 text-center hover-card">
                    <div class="mb-3">
                        <i class="bi bi-wallet2 fs-1 text-primary"></i>
                    </div>
                    <h4>Deposit</h4>
                    <p class="text-muted mb-0">Add funds to your account</p>
                </div>
            </a>
        </div>

        <!-- Withdraw Card -->
        <div class="col-md-6 col-lg-3">
            <a href="/Account/Withdraw" class="text-decoration-none">
                <div class="card shadow-sm h-100 p-4 text-center hover-card">
                    <div class="mb-3">
                        <i class="bi bi-cash-stack fs-1 text-primary"></i>
                    </div>
                    <h4>Withdraw</h4>
                    <p class="text-muted mb-0">Withdraw funds from your account</p>
                </div>
            </a>
        </div>

        <!-- Transaction History Card -->
        <div class="col-md-6 col-lg-3">
            <a href="/Account/TransactionHistory" class="text-decoration-none">
                <div class="card shadow-sm h-100 p-4 text-center hover-card">
                    <div class="mb-3">
                        <i class="bi bi-clock-history fs-1 text-primary"></i>
                    </div>
                    <h4>History</h4>
                    <p class="text-muted mb-0">View your transaction history</p>
                </div>
            </a>
        </div>

        <!-- Delete Account Card -->
        <div class="col-md-6 col-lg-3">
            <a href="/Account/DeleteAccount" class="text-decoration-none">
                <div class="card shadow-sm h-100 p-4 text-center hover-card border-danger">
                    <div class="mb-3">
                        <i class="bi bi-trash fs-1 text-danger"></i>
                    </div>
                    <h4 class="text-danger">Delete</h4>
                    <p class="text-muted mb-0">Delete your account</p>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 15px;
        transition: transform 0.2s;
    }

    .hover-card:hover {
        transform: translateY(-5px);
    }

    .border-danger {
        border: 1px solid #dc3545 !important;
    }

    /* Add this to your _Layout.cshtml or link to Bootstrap icons in your head tag */
</style>