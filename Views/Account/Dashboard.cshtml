<style>
    /* Main Container */
    .dashboard-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    /* Card Styles */
    .card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 10px 20px rgba(0,0,0,0.08) !important;
        }

    /* Welcome Card */
    .bg-gradient-primary {
        background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
    }

    .balance-display {
        backdrop-filter: blur(4px);
    }

    /* Stats Icons */
    .stat-icon {
        height: 50px;
        width: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
    }

    .bg-primary-light {
        background-color: rgba(78, 115, 223, 0.1);
    }

    .bg-success-light {
        background-color: rgba(40, 167, 69, 0.1);
    }

    /* Action Cards */
    .action-card {
        border-radius: 15px;
        transition: all 0.3s ease;
        background-color: white;
        border: 1px solid rgba(0,0,0,0.05);
    }

        .action-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.1) !important;
        }

    .icon-wrapper {
        height: 70px;
        width: 70px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: rgba(78, 115, 223, 0.1);
        border-radius: 50%;
        margin: 0 auto;
        color: #4e73df;
        transition: all 0.3s ease;
    }

    .withdraw-icon {
        background-color: rgba(108, 117, 125, 0.1);
        color: #6c757d;
    }

    .action-card:hover .icon-wrapper {
        transform: scale(1.1);
    }

    /* Transaction List */
    .transaction-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .transaction-item {
        padding: 20px;
        border-bottom: 1px solid rgba(0,0,0,0.05);
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: background-color 0.2s ease;
    }

        .transaction-item:hover {
            background-color: rgba(0,0,0,0.01);
        }

        .transaction-item:last-child {
            border-bottom: none;
        }

    .deposit {
        color: #28a745;
    }

    .withdraw {
        color: #dc3545;
    }

    .transaction-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        border-radius: 12px;
        margin-right: 16px;
        background-color: #e9ecef;
        color: #495057;
    }

        .transaction-icon.deposit {
            /* background-color: rgba(40, 167, 69, 0.1); */
            color: #28a745;
        }

        .transaction-icon.withdraw {
            /* background-color: rgba(220, 53, 69, 0.1); */
            color: #dc3545;
        }

    /* Empty State */
    .empty-icon-wrapper {
        height: 80px;
        width: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: rgba(0,0,0,0.03);
        border-radius: 50%;
        margin: 0 auto;
    }

    /* Card Headers */
    .card-header {
        background-color: white;
        border-bottom: 1px solid rgba(0,0,0,0.05);
        padding: 1rem 1.5rem;
    }
</style>