<div class="container min-vh-100 d-flex align-items-center justify-content-center">
    <div class="card shadow-sm p-5" style="max-width: 450px; width: 100%">
        <h2 class="text-center mb-4">Mention the amount you would like to deposit</h2>
        <form method="post" action="/Account/Deposit">
            <div class="mb-3">
                <label for="balance" class="form-label">Enter amount</label>
                <div class="input-group">
                    <span class="input-group-text">₹</span>
                    <input type="number"
                        class="form-control"
                        id="balance"
                        name="Balance"
                        placeholder="Enter the amount"
                        min="0"
                        required />
                </div>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">Deposit</button>
            </div>
        </form>
    </div>
</div>

<style>
    .btn-primary {
        padding: 12px 30px;
        border-radius: 8px;
    }
    .input-group-text {
        border-radius: 8px 0 0 8px;
        background-color: #f8f9fa;
    }
</style>
