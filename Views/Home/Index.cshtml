@{
    ViewData["Title"] = "Home Page";
}

<div class="container min-vh-100 d-flex align-items-center justify-content-center">
    <div class="card shadow-sm p-5 text-center" style="max-width: 400px;">
        <h2 class="mb-4">Are you a new user?</h2>
        <p class="text-muted mb-4">Join us today and experience seamless banking services</p>
        <a href="/Account/Register" class="btn btn-primary btn-lg mb-3">Register Now</a>
        <p class="small">
            Already a user? <a href="/Account/Login" class="text-primary">Login here</a>
        </p>
    </div>
</div>

<style>
.card {
    border-radius: 15px;
    border: none;
    transition: transform 0.2s;
}

.btn-primary {
    padding: 12px 30px;
    border-radius: 8px;
}
</style>